{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <div class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>Etablissement</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Tel</th>
                <th>Dnaissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.etablissement }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.dnaissance ? user.dnaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('crud_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('crud_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </div>

    <a href="{{ path('crud_user_new') }}">Create new</a>
{% endblock %}
