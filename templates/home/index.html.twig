{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

<div id="map" data-point="{{ points }}">


    {# bouton sur la map #}

    <div class="boutton w-100 d-flex justify-content-between">

        {# bouton ajout de point #}
        {% if is_granted('ROLE_USER') %}
        <button type="button" class="btn bouton-ajout" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-plus ajout-plus"></i>
        </button>
        <ul class="dropdown-menu js-add-point-links">
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Alimentaire'}) }}">Alimentaire</a></li>
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Centre sociaux'}) }}">Centre sociaux</a></li>
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Hébergement'}) }}">Hébergement</a></li>
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Hygiène'}) }}">Hygiène</a></li>
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Santé'}) }}">Santé</a></li>
            <li><a class="dropdown-item text-whiter text-white" href="{{ path('ajout-point', {'cat': 'Matériel'}) }}">Matériel</a></li>
        </ul>
        {% else %}

        {% endif %}
        {# bouton filtre #}
        <button type="button" class="btn bouton-filtre" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-funnel-fill filtre-icon"></i>
        </button>
        <ul class="dropdown-menu">
        <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center js-point-color"
                    data-is-point="{{ 'Tous' }}"
                    >Tous</a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center js-point-color"
                    data-is-point="{{ 'Alimentaire' }}"
                    >Alimentaire<img class="marker-filtre" src="{{ asset('build/img/marker-icon-yellow.png') }}"
                        alt="marker alimentaire"></a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center js-point-color"
                    data-is-point="{{ 'Centre sociaux' }}"
                    >Centre sociaux<img class="marker-filtre" src="{{ asset('build/img/marker-icon-red.png') }}"
                        alt="marker centre sociaux"></a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center  js-point-color"
                    data-is-point="{{ 'Hébergement' }}"
                    >Hébergement<img class="marker-filtre" src="{{ asset('build/img/marker-icon-green.png') }}"
                        alt="marker hébergement"></a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center  js-point-color"
                    data-is-point="{{ 'Hygiène' }}"
                    >Hygiène<img class="marker-filtre" src="{{ asset('build/img/marker-icon-blue-light.png') }}"
                        alt="marker hygiène"></a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center  js-point-color"
                    data-is-point="{{ 'Santé' }}"
                    >Santé<img class="marker-filtre" src="{{ asset('build/img/marker-icon.png') }}"
                        alt="marker santé"></a></li>
            <li><a class="dropdown-item text-white d-flex flex-row justify-content-end align-items-center  js-point-color"
                    data-is-point="{{ 'Matériel' }}"
                    >Matériel<img class="marker-filtre" src="{{ asset('build/img/marker-icon-grey.png') }}"
                        alt="marker matériel"></a></li>
        </ul>

    </div>
</div>

{% endblock %}