{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="form-body text-center d-flex justify-content-center align-items-center">
    <div class="form col-8 col-lg-4 p-4">

    <h1 class="h1 mb-3">Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.etablissement, { attr: { 'label': 'Submit me', 'class': 'input w-75 mx-auto' }} ) }}
        {{ form_row(registrationForm.name, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.firstname, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.codepostal, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.ville, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.adresse, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.dnaissance, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.email, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.tel, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        {{ form_row(registrationForm.plainPassword, { attr: { 'class': 'input w-75 mx-auto' } }) }}
        <button type="submit" class="btn btn-form">S'inscrire</button>
    {{ form_end(registrationForm) }}

    </div>
</div>
{% endblock %}
